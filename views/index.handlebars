<div class="container" id="header">
    <h1 class="text-center"><strong>Burgers</strong></h1>
</div>
<br>
<div class="bodycontainer">
    <div class="row" id="row1">
        <div class="col-md-6">
            <h3 class="text-center"><strong>Burgers Available to Eat</strong></h3>
            <hr>
            <br>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <div class="boxburger">
                            {{this.burger_name}}
                            <button class="devourUndevour devour" data-devourid="{{this.id}}" type="submit">Devour it!</button>
                        </div>   
                    {{/unless}}
                {{/each}}
            
        </div>
        <div class="col-md-6">
            <h3 class="text-center"><strong>Burgers That Have been Devoured!</strong></h3>
            <hr>
                <br>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <div class="boxburger">
                            {{this.burger_name}}
                        </div>
                    {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row" id="row2">
        <div class="col-sm-12 text-center">
            <h3><strong>Add Burger</strong></h3>    
            <hr>     
            <form class="burgerForm">
                <div class="form-group">
                    <label>Burger Name:</label>
                    <input type="text" id="burger_name" name="burger_name">
                </div>
                <button id="burgerButton" type="submit">Place Order</button>
            </form>
            <br>
        </div>
    </div>
    <br>
</div>
